{% block employe %}
    {% for element in employee %}
        <div class="card">
            <div class="row">
                <div class="col-md-3 bg-primary" data-aos="fade-right" data-aos-offset="50" data-aos-duration="500">
                    <div class="card-body cc-experience-header">
                        <div class="h5">{{ element.nom|upper ~' '~ element.prenom|capitalize }}</div>
                    </div>
                </div>
                <div class="col-md-9" data-aos="fade-left" data-aos-offset="50" data-aos-duration="500">
                    <div class="card-body">
                        <div class="h5">{{ element.profession}}</div>
                        <p>{{ element.adresse}}</p>
                        <a class="btn btn-primary smooth-scroll mr-2" href="{{ path('edit_personne',{'id':element.id}) }}" data-aos="zoom-in" data-aos-anchor="data-aos-anchor">Modifier</a>
                        <a class="btn btn-primary smooth-scroll mr-2" href="{{ path('personnes',{'id':element.id}) }}" data-aos="zoom-in" data-aos-anchor="data-aos-anchor">voir</a>
                        <a class="btn btn-primary" href="{{asset('uploads/logo/'~element.cvpdf)}}" target = "_blank" data-aos="zoom-in" data-aos-anchor="data-aos-anchor">Télécharger CV</a>
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}

{% endblock %}