{% block employe %}
    <div class="section" id="skill">
        <div class="container">
            <div class="card" data-aos="fade-up" data-aos-anchor-placement="top-bottom">
                <div class="card-body">
                    {{ form_start(formulaire) }}
                        <div class="row mb-3">
                            <div class="col">
                                {{form_widget(formulaire.nom, {'attr':{'placeholder': "Nom",'class':'form-control'}})}}
                            </div>
                            <div class="col">
                                {{form_widget(formulaire.prenom, {'attr':{'placeholder': "Prénom",'class':'form-control'}})}}
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col">
                                {{form_widget(formulaire.apropos, {'attr':{'placeholder': "À propos",'class':'form-control'}})}}
                            </div>
                            <div class="col">
                                {{form_widget(formulaire.Age, {'attr':{'placeholder': "Age",'class':'form-control'}})}}
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col">
                                {{form_widget(formulaire.email, {'attr':{'placeholder': "E-mail",'class':'form-control'}})}}
                            </div>
                            <div class="col">
                                {{form_widget(formulaire.telephone, {'attr':{'placeholder': "Telephone",'class':'form-control'}})}}
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col">
                                {{form_widget(formulaire.adresse, {'attr':{'placeholder': "Adresse",'class':'form-control'}})}}
                            </div>
                            <div class="col">
                                {{form_widget(formulaire.langues, {'attr':{'placeholder': "Langues",'class':'form-control'}})}}
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col">
                                {{form_widget(formulaire.profession, {'attr':{'placeholder': "Profession",'class':'form-control'}})}}
                            </div>
                        </div>
                        <div class="row mb-3">

                            <div class="col">
                                {{form_widget(formulaire.portrait, {'attr':{'placeholder': "Langues",'class':'form-control'}})}}
                            </div>
                            <div class="col">
                                {{form_widget(formulaire.cvpdf, {'attr':{'placeholder': "Nom",'class':'form-control'}})}}
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <button class="btn btn-primary" type="submit">Soumettre</button>
                            </div>
                        </div>
                    {{ form_end(formulaire) }}
                </div>
            </div>
        </div>
    </div>

{% endblock %}